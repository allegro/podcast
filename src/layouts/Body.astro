---
// src/layouts/Body.astro
import Tracking from '../components/Tracking.astro';
---
        <body>
          <header class="site-header">
            <div class="back-link">
              <a href="https://allegro.tech">
                <span>Back to </span>
                <img src="/img/allegro-tech.svg" alt="allegro.tech home" />
              </a>
            </div>
            <h1 class="logo">
              <a href="/"><img src="/img/allegro-tech-podcast.svg" alt="allegro.tech podcast" /></a>
            </h1>
            <nav class="site-nav">
              <ul class="site-navlist">
                <li><a class="page-link" href="/season-1">seria 1</a></li>
                <li><a class="page-link" href="/season-2">seria 2</a></li>
              </ul>
              <ul class="site-navlist social-icons">
                <li>
                  <a class="social icon-link" href="https://facebook.com/allegro.tech" title="Facebook">
                    <img src="/img/social/facebook.svg" alt="Facebook" />
                  </a>
                </li>
                <li>
                  <a class="social icon-link" href="https://twitter.com/allegrotech" title="Twitter">
                    <img src="/img/social/twitter.svg" alt="Twitter" />
                  </a>
                </li>
                <li>
                  <a class="social icon-link" href="http://meetup.com/allegrotech" title="Meetup Group">
                    <img src="/img/social/meetup.svg" alt="Meetup" />
                  </a>
                </li>
                <li>
                  <a class="social icon-link" href="/feed.xml" title="RSS Feed">
                    <img src="/img/social/rss.svg" alt="RSS" />
                  </a>
                </li>
                <li>
                  <a class="social icon-link" href="https://github.com/allegro" title="Github">
                    <img src="/img/social/github.svg" alt="Github" />
                  </a>
                </li>
              </ul>
            </nav>
          </header>
          <slot />  
          <footer class="site-footer">
            <div class="content" itemScope itemType="http://schema.org/Organization">
              <link itemProp="url" href="https://allegro.tech" />
              <link itemProp="logo" href="/img/logo-allegro-tech.png" />
              <div class="site-title">
                <span>Proudly built by <img src="/img/allegro-tech.svg" alt="allegro.tech" />
                  <a href="https://blog.allegro.tech/authors/"> engineers</a>
                </span>
              </div>
            </div>
          </footer>
          <Tracking />
        </body>